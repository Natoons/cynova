generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Produit {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  nom           String
  description   String
  ingredientIds String[] @default([])
  bienfaits     String[]
  quantiteIds   String[] @default([])
  yukaScore     Int?
  provenance    String?
  stock         Int
  blogIds       String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Ingredient {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nom         String
  origine     String?
  produitId   String?   @db.ObjectId
}

model Quantite {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ingredient  String
  valeur      Float
  unite       String
  produitId   String?   @db.ObjectId
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titre       String
  contenu     String
  categorie   String
  produitIds  String[] // IDs des produits li√©s
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Utilisateur {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  motDePasse  String
  role        Role    @default(USER)
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
